<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyEcommerce" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="iconTint">#FFFFFF</item>
    </style>

    <style name="ToolBarPrimaryIconTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="iconTint">@color/colorPrimary</item>
        <item name="tint">@color/colorPrimary</item>
    </style>

    <style name="ToolBarBlackIconTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="iconTint">@color/colorDarkBG</item>
        <item name="tint">@color/colorDarkBG</item>
    </style>

    <style name="customTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
    </style>

    <style name="TabTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>